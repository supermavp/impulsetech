rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function para obtener el rol del usuario
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isAdmin() {
      return request.auth != null && getUserRole() == 'admin';
    }
    
    function isTeacher() {
      return request.auth != null && (getUserRole() == 'teacher' || isAdmin());
    }
    
    function isStudent() {
      return request.auth != null && getUserRole() == 'student';
    }
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Colección de usuarios
    match /users/{userId} {
      // Los usuarios pueden leer sus propios datos
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // Los usuarios pueden escribir sus propios datos (excepto rol)
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && request.auth.uid == userId && 
        (!('role' in request.resource.data.diff(resource.data)) || isAdmin());
      // Solo admin puede eliminar usuarios
      allow delete: if isAdmin();
      // Admin puede leer y escribir todos los usuarios
      allow read, write: if isAdmin();
    }
    
    // Colección de cursos
    match /courses/{courseId} {
      // Los profesores pueden leer sus propios cursos (activos o no)
      // Todos los usuarios autenticados pueden leer cursos activos
      // Los admins pueden leer todos los cursos
      allow read: if isAuthenticated() && (
        resource.data.teacherId == request.auth.uid || 
        resource.data.isActive == true || 
        isAdmin()
      );
      // Solo teachers y admin pueden crear cursos
      allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
      // Solo el profesor del curso o admin pueden actualizar
      allow update: if isTeacher() && (resource.data.teacherId == request.auth.uid || isAdmin());
      // Solo admin puede eliminar cursos
      allow delete: if isAdmin();
    }
    
    // Colección de lecciones
    match /lessons/{lessonId} {
      // Los profesores pueden leer lecciones de sus propios cursos
      // Todos los usuarios autenticados pueden leer lecciones de cursos activos
      // Los admins pueden leer todas las lecciones
      allow read: if isAuthenticated() && (
        get(/databases/$(database)/documents/courses/$(resource.data.courseId)).data.teacherId == request.auth.uid ||
        get(/databases/$(database)/documents/courses/$(resource.data.courseId)).data.isActive == true ||
        isAdmin()
      );
      // Solo teachers y admin pueden crear lecciones
      allow create: if isTeacher();
      // Solo teachers y admin pueden actualizar
      allow update: if isTeacher();
      // Los teachers pueden eliminar lecciones de sus propios cursos, admins pueden eliminar todas
      allow delete: if isTeacher() && (
        get(/databases/$(database)/documents/courses/$(resource.data.courseId)).data.teacherId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // Colección de inscripciones
    match /enrollments/{enrollmentId} {
      // Los estudiantes pueden leer sus propias inscripciones
      allow read: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid ||
        get(/databases/$(database)/documents/courses/$(resource.data.courseId)).data.teacherId == request.auth.uid ||
        isAdmin()
      );
      // Los estudiantes pueden inscribirse en cursos
      allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
      // Los teachers pueden actualizar calificaciones y progreso
      allow update: if isTeacher() && (
        get(/databases/$(database)/documents/courses/$(resource.data.courseId)).data.teacherId == request.auth.uid ||
        isAdmin()
      );
      // Solo admin puede eliminar inscripciones
      allow delete: if isAdmin();
    }

    // Colección de completado de lecciones
    match /lessonCompletions/{completionId} {
      // Los estudiantes pueden leer sus propias completaciones
      // Los profesores pueden leer completaciones de sus cursos
      allow read: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid ||
        get(/databases/$(database)/documents/courses/$(resource.data.courseId)).data.teacherId == request.auth.uid ||
        isAdmin()
      );
      // Los estudiantes pueden crear sus propias completaciones
      allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
      // Nadie puede actualizar o eliminar completaciones (son registros históricos)
      allow update, delete: if false;
    }

    // Colección de evaluaciones
    match /quizzes/{quizId} {
      // Los profesores pueden leer evaluaciones de sus cursos
      // Los estudiantes pueden leer evaluaciones activas
      // Los admins pueden leer todas las evaluaciones
      allow read: if isAuthenticated() && (
        get(/databases/$(database)/documents/courses/$(resource.data.courseId)).data.teacherId == request.auth.uid ||
        resource.data.isActive == true ||
        isAdmin()
      );
      // Solo teachers y admin pueden crear evaluaciones
      allow create: if isTeacher();
      // Solo teachers y admin pueden actualizar evaluaciones
      allow update: if isTeacher();
      // Solo teachers y admin pueden eliminar evaluaciones
      allow delete: if isTeacher();
    }

    // Colección de respuestas a evaluaciones
    match /quizSubmissions/{submissionId} {
      // Los estudiantes pueden leer sus propias respuestas
      // Los profesores pueden leer respuestas de evaluaciones de sus cursos
      allow read: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid ||
        get(/databases/$(database)/documents/courses/$(resource.data.courseId)).data.teacherId == request.auth.uid ||
        isAdmin()
      );
      // Los estudiantes pueden crear respuestas a evaluaciones
      allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
      // Nadie puede actualizar o eliminar respuestas (son registros históricos)
      allow update, delete: if false;
    }
    
    // Por defecto, denegar todo lo demás
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

